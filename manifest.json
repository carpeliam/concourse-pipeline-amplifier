{
  "name": "Concourse Status Amplifier",
  "version": "0.2.1",
  "description": "Amplify Concourse status via background image",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*/teams/*/pipelines/*"],
      "exclude_matches": ["*://*/teams/*/pipelines/*/jobs/*"],
      "css": ["contentScript.css"],
      "js": ["contentScript.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "manifest_version": 2
}
